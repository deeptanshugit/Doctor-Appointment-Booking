<h3><a class="btn btn-secondary" href="/appointment"><i class="fa fa-plus"></i> Create New</a> All Appointments</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Date</th>
            <th>Time Slot</th>
            <th>Service</th>
            <th>Edit Appointment</th>
            <th>Delete Appointment</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phone}}</td>
            <td>{{this.date}}</td>
            <td>{{this.timeSlot}}</td>
            <td>{{this.service}}</td>
            <td>
                <a href="/appointment/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
            </td>
            <td><a href="/appointment/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this appointment ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a></td>
        </tr>
        {{/each}}
    </tbody>
</table>